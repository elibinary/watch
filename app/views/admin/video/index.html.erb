<div class="center-block">
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="#">Video</a>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li><a href="/admin/video/new">New</a></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Category <span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
              <% category_items.each do |key, value| %>
                <li><a href="<%= value%>"><%= key%></a></li>
              <% end %>
            </ul>
          </li>
        </ul>

        <form class="navbar-form navbar-left" role="search">
          <div class="form-group">
            <input type="text" class="form-control" placeholder="Search">
          </div>
          <button type="submit" class="btn btn-default">Submit</button>
        </form>

        <ul class="nav navbar-nav navbar-right">
          <li><a href="#">Link</a></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Tags <span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
              <% tag_items.each do |key, value| %>
                <li><a href="<%= value%>"><%= key%></a></li>
              <% end %>
            </ul>
          </li>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>

  <div>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Autonym</th>
          <th>Category</th>
          <th>Tags</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @videos.each do |video| %>
          <tr>
            <td><%= video.name%></td>
            <td><%= video.autonym%></td>
            <td><%= video.category%></td>
            <td><a tabindex="0" class="btn btn-sm btn-warning" role="button" data-toggle="popover" data-trigger="focus" title="Tags" data-content="<%= video.tags%>">tags</a></td>
            <td><%= link_to "Edit", edit_admin_video_path(video) %></td>
            <td><%= button_to "Delete", admin_video_path(video), :method => :delete, :class =>"btn btn-default btn-sm" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <%= will_paginate @videos %>
  </div>
</div>

<script type="text/javascript">
  $(function () {
    $('[data-toggle="popover"]').popover()
  })
</script>